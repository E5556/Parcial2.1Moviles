<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#378DFA"
    android:backgroundTint="#378DFA"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:shadowColor="#1D4888"
        android:text="FACTURACION TOTAL"
        android:textAlignment="center"
        android:textColor="#A50202"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00BCD4"
        android:contextClickable="false"
        android:orientation="vertical"
        android:textAlignment="gravity"
        android:textDirection="locale">

        <TextView
            android:id="@+id/textViewPesoAlturaValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Bruto"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewIMCValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Impuesto Total IVA"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewDescripcionValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Bruto + IVA"
            android:textColorLink="#5A1313"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="499dp"
            android:foreground="@drawable/img"
             />
    </LinearLayout>

</LinearLayout>